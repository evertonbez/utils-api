{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Utils Everton API",
    "description": "API documentation for Utils Everton API"
  },
  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {},
    "parameters": {}
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Health",
        "responses": {
          "200": {
            "description": "Retrieve health",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "whatsapp": {
                          "type": "object",
                          "properties": {
                            "healthy": {
                              "type": "boolean"
                            }
                          },
                          "required": [
                            "healthy"
                          ]
                        },
                        "instagram": {
                          "type": "object",
                          "properties": {
                            "healthy": {
                              "type": "boolean"
                            }
                          },
                          "required": [
                            "healthy"
                          ]
                        }
                      },
                      "required": [
                        "whatsapp",
                        "instagram"
                      ]
                    }
                  },
                  "required": [
                    "data"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Returns an error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string",
                      "example": "disconnected"
                    },
                    "message": {
                      "type": "string",
                      "example": "The login details of this item have changed (credentials, MFA, or required user action) and a user login is required to update this information."
                    },
                    "requestId": {
                      "type": "string",
                      "example": "123e4567-e89b-12d3-a456-426655440000"
                    }
                  },
                  "required": [
                    "code",
                    "message",
                    "requestId"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/ai/transcribe": {
      "post": {
        "summary": "Transcribe audio",
        "tags": [
          "ai"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "description": "Audio file",
                    "format": "binary"
                  }
                },
                "required": [
                  "file"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Retrieve all todos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "text": {
                      "type": "string",
                      "description": "Transcribed text"
                    }
                  },
                  "required": [
                    "text"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Returns an error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string",
                      "example": "disconnected"
                    },
                    "message": {
                      "type": "string",
                      "example": "The login details of this item have changed (credentials, MFA, or required user action) and a user login is required to update this information."
                    },
                    "requestId": {
                      "type": "string",
                      "example": "123e4567-e89b-12d3-a456-426655440000"
                    }
                  },
                  "required": [
                    "code",
                    "message",
                    "requestId"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}